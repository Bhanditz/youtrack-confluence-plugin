<?xml version="1.0" encoding="UTF-8"?>
<atlassian-plugin key="youtrack.issue.highlighter.plugin" name="YouTrack Issue Highlighter" plugins-version="2">
    <plugin-info>
        <description>Plugin for macro that highlights YouTrack issues.</description>
        <version>1.6</version>
        <vendor name="JetBrains" url="http://www.jetbrains.com"/>
    </plugin-info>
    <macro name="issue" class="jetbrains.macros.IssueHighlighter" key="issue-key">
        <description>Inserts dynamic link to a YouTrack issue.</description>
        <resource type="velocity" name="help" location="templates/help-link.vm">
            <param name="help-section" value="confluence"/>
        </resource>
        <category name="confluence-content"/>
        <parameters>
            <parameter name="id" type="string"/>
            <parameter name="style" type="string"/>
        </parameters>
    </macro>
    <macro name="report" class="jetbrains.macros.IssueReport" key="report-key">
        <description>Inserts a report based on YouTrack query.</description>
        <resource type="velocity" name="help" location="templates/help-report.vm">
            <param name="help-section" value="confluence"/>
        </resource>
        <category name="confluence-content"/>
        <parameters>
            <parameter name="project" type="string"/>
            <parameter name="query" type="string"/>
        </parameters>
    </macro>
</atlassian-plugin>